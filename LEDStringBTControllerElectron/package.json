{
  "name": "aurafluxcontroller",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "led, ledcontroller, bluetooth, controller, electron"
  ],
  "author": "lakinduk.me",
  "license": "ISC",
  "description": " AURA FLUX Controller - PC Bluetooth LED Controller for Duo Strip",
  "dependencies": {
    "node-ble": "^1.9.0"
  },
  "build": {
    "appId": "com.lakinduk.aurafluxcontroller",
    "productName": "Aura Flux Controller",
      "icon": "icons/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^26.0.12"
  }
}
